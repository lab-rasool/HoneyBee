<DocsLayout title="Documentation">
  <p class="text-lg text-gray-600 mb-8">
    Welcome to the HoneyBee documentation. This guide will help you understand
    how to use the HoneyBee framework for multimodal oncology data processing
    and analysis.
  </p>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    {
      documentationSections.map((section) => (
        <a href={section.link} class="block no-underline">
          <div class="border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow bg-white">
            <div class="text-3xl mb-3">{section.icon}</div>
            <h3 class="text-xl font-bold mb-2 text-gray-900">
              {section.title}
            </h3>
            <p class="text-gray-600">{section.description}</p>
